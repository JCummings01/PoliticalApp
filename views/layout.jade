doctype html
html(lang='en', ng-app="politicalApp")
  head
    meta(charset="utf-8")
    title
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")

  body
    .container
      block content

    nav.navbar.navbar-default( role="navigation" )
      .navbar-header
          button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a.navbar-brand(href="#") PoliticalApp

      div#navbar-inverse.collapse.navbar-collapse
          ul.nav.navbar-nav
              li.dropdown
                  a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-expanded="false" ) States
                      span.caret
                  ul.dropdown-menu( role="menu" )
                      li: a( href="#" ) Action
                      li: a( href="#" ) Another action
                      li: a( href="#" ) Something else here
                      li.divider
                      li.dropdown-header Nav header
                      li: a( href="#" ) Separated link
                      li: a( href="#" ) One more separated link
          input(type="text", placeholder="Search...", ng-model="search")

    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-resource.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-route.js")
    script(src="/main.js")